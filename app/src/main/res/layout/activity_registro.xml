<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistroActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="204dp"
        android:layout_height="207dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/logo" />

    <ScrollView
        android:layout_width="459dp"
        android:layout_height="773dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvescribanombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escriba su nombre: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="Juan"
                android:inputType="text"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tvapellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Escriba sus apellidos: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="Pérez Rodriguez"
                android:inputType="text"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/cedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Número de cédula "
                android:textSize="20dp" />
            <EditText
                android:id="@+id/edtcedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="12345687921"
                android:inputType="number"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tvcorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Escriba su correo electrónico "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtcorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="juanperez@micorreo.com"
                android:inputType="textEmailAddress"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvtelefonofijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Escriba su teléfono fijo, si tiene: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextfijo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="3102456858"
                android:inputType="number"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvtelefonocelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:text="Escriba su teléfono celular: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtcelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="3001234569"
                android:inputType="number"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvEPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:text="EPS:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edEPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="miSalud"
                android:inputType="text"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/fondoPension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:text="fondo de pensiones:"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/edtPeniones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="miPensión"
                android:inputType="text"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/aniovinculacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:text="En qué año se vinculó a la empresa: "
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spaniovinculado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="7dp"

                />


            <CheckBox
                android:id="@+id/cbsupervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"
                android:text="¿Es supervisor?"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtcontrasenasupervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:enabled="false"
                android:hint="Digite clave de validación "
                android:inputType="textPassword"
                android:textSize="20sp"
                android:visibility="gone" />


            <Button
                android:id="@+id/btnsiguiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#011336"
                android:text="Siguiente"
                android:textColor="#FFCE17"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
