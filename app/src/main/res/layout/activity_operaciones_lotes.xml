                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="#011336"
                                android:padding="8dp"
                                android:text="Maquina"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold"
