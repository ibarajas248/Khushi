<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">






    <TextView
        android:id="@+id/producto"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="producto"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#1976D2"
        />


    <TextView
        android:id="@+id/subparte"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="producto"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#1E88E5" />

    <TextView
        android:id="@+id/operaciones"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:text="operaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#1976D2" />
    <TextView
        android:id="@+id/id_lotes_operaciones"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="id_lotes_operaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#1976D2" />
    <TextView
        android:id="@+id/cantidad"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="cantidad"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#1976D2" />
    <TextView
        android:id="@+id/empleado"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Empleado"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#1976D2" />
    <TextView
        android:id="@+id/id_operaciones_subparte_producto"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="id_operaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#1976D2" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <!-- Agregar mÃ¡s TextViews para los nuevos campos -->

</LinearLayout>
