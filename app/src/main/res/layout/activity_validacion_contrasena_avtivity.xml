<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.validacionContrasenaAvtivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="204dp"
        android:layout_height="207dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="440dp"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tctdigiteduusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="cree un nombre de usuario: "
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edscribausuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Digite su contrase単a "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/contrasena1validacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contrase単a"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Confirme contrase単a:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/contrasena2validacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:hint="Contrase単a"/>

        <Button
            android:id="@+id/btnregistrarme1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarme"
            android:backgroundTint="#011336"
            android:textColor="#FFCE17"
            android:textSize="20dp"/>


    </LinearLayout>

</RelativeLayout>
