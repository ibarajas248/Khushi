<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTextagregarproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="nombre del producto"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"/>
    <EditText
        android:id="@+id/editTextprecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="digite el precio "
        android:layout_below="@id/editTextTextagregarproducto"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/registrarproductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextprecio"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="Registrar producto"
        android:layout_alignParentEnd="true"
        android:textColor="#FFCE17"
        android:textSize="20dp"
        android:backgroundTint="#011336"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductos"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_below="@id/registrarproductos"
        android:layout_marginTop="16dp"
        android:visibility="visible" />
    <Button
        android:id="@+id/boton_modificarproducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewProductos"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="Registrar producto"
        android:layout_alignParentEnd="true"
        android:textColor="#FFCE17"
        android:textSize="20dp"
        android:backgroundTint="#011336"
        android:visibility="gone"/>

</RelativeLayout>
