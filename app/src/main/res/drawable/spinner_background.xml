<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo del spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#011336" /> <!-- Color de fondo del spinner -->
            <corners android:radius="4dp" />  <!-- Bordes redondeados opcionales -->
        </shape>
    </item>

    <!-- Flecha del spinner -->
    <item android:drawable="@android:drawable/arrow_down_float" android:right="16dp" android:gravity="right|center_vertical"/>

</layer-list>